---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

import "../styles/global.css";
---

<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Paul Koch – Webentwicklung, Startups & digitale Lösungen</title>

    <meta
      name="description"
      content="Ich bin Paul Koch, technologiebegeisterter Webentwickler mit Fokus auf Startups, digitale Produkte und pragmatische Lösungen. Entdecke meine Projekte, Fähigkeiten und mehr."
    />
    <meta name="author" content="Paul Koch" />

    <!-- Social Sharing -->
    <meta property="og:type" content="website" />
    <meta
      property="og:title"
      content="Paul Koch – Webentwicklung & digitale Produkte"
    />
    <meta
      property="og:description"
      content="Portfolio von Paul Koch – pragmatische Lösungen, moderne Technologien und Unternehmertum vereint."
    />
    <meta property="og:image" content="/logo-256px.svg" />
    <meta property="og:url" content="https://paulfinnkoch.com" />
    <meta property="og:locale" content="de_DE" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:title"
      content="Paul Koch – Webentwicklung & digitale Produkte"
    />
    <meta
      name="twitter:description"
      content="Entdecke das Portfolio von Paul Koch: moderne Webentwicklung, Startup-Expertise und technische Lösungen mit Anspruch."
    />
    <meta name="twitter:image" content="/logo-256px.svg" />

    <!-- Optional: Apple & Android -->
    <link rel="apple-touch-icon" href="/logo-256px.svg" />
    <meta name="theme-color" content="#000000" />
  </head>

  <body class="bg-black text-white">
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
